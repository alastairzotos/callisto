{
	"include": ["src"],
	"exclude": ["plugins"],
	"compilerOptions": {
		"strict": true,
		"lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
		"target": "es5",
		"noImplicitAny": false,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": false,
		"declaration": true,
		"experimentalDecorators": false,
		"emitDecoratorMetadata": false,
		"baseUrl": "src"
	}
}
